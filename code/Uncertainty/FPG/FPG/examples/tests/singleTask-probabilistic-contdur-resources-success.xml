
<domain name="new">
  <predicates>
    <predicate name="IntermediateGoal"/>
  </predicates>
  <functions>
    <function name="money"/>
  </functions>
  <actions>
    <action backgroundColour="#98FB98" name="A">
      <precondition>
        <functionCondition type="gt">
	  <function name="money"/>
	  <number>3</number>    
	</functionCondition>
      </precondition>
      <over-all/>
      <at-start>
        <functionEffect type="decrease">
          <function name="money"/>
          <number>3</number>
        </functionEffect>
      </at-start>
      <effect>
        <delay mean="100" type="normal" standardDeviation="20"/>
      </effect>
      <probabilistic>
	<outcome label="Failure" probability="0.45"/>
        <outcome label="Success" probability="0.55">
          <effect>
            <predicate name="IntermediateGoal" negated="false"/>
	  </effect>
	</outcome>

      </probabilistic>
    </action>
  </actions>
  <problem>
    <init> 
        <predicates/>
        <functions>
        <assign>
          <function name="money"/>
          <number value="3"/>
        </assign>
      </functions>
    </init>
    <goal>
      <predicate name="IntermediateGoal"/>
    </goal>
  </problem>

  <properties>
	<property>
		<name> planner regression test </name>
		<value/>
	</property>
  </properties>
</domain>
