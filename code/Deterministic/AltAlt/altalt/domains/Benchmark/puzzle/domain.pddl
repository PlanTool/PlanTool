(define (domain longs-puzzle)
    (:requirements :strips)
    (:predicates (square ?square)
	         (tile ?tile)
		 (at ?tile ?square)
		 (at-blank ?blank)
		 (conn ?blank ?square))
  (:action move
	     :parameters (?tile ?nextsq ?blanksq)
	     :precondition (and (square ?blanksq) (square ?nextsq)
				 (tile ?tile)
				 (at ?tile ?nextsq) (at-blank ?blanksq)
				 (conn ?blanksq ?nextsq))
	     :effect (and (at-blank ?nextsq) (at ?tile ?blanksq)
			   (not (at-blank ?blanksq))
			   (not (at ?tile ?nextsq))))
  )
	     
